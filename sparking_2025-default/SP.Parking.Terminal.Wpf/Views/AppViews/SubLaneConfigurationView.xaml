<Views:BaseView x:Class="SP.Parking.Terminal.Wpf.Views.AppViews.SubLaneConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:Views="clr-namespace:SP.Parking.Terminal.Wpf.Views"
             xmlns:common="clr-namespace:SP.Parking.Terminal.Wpf.Views.Common"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:w="clr-namespace:SP.Parking.Terminal.Wpf.Utility"
             xmlns:enum="clr-namespace:SP.Parking.Terminal.Core.Models;assembly=SP.Parking.Terminal.Core"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"   
             mc:Ignorable="d"
             Height ="Auto"
             d:DesignHeight="720" MinWidth="1024" Background="White">

    <Views:BaseView.Resources>
        <w:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <w:StringCodeToString x:Key="StringCodeToString" />
        <w:EnumToFriendlyNameConverter x:Key="EnumItemsConverter"/>
        <w:StringToEnableConverter x:Key="StringToEnableConverter"/>

    </Views:BaseView.Resources>

    <GroupBox Name="MainGroupBox" Header="{Binding LaneId}" Margin="10" Height="700">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="16*"/>
                <ColumnDefinition Width="159*"/>
                <ColumnDefinition Width="189*"/>
                <ColumnDefinition Width="242*"/>
                <ColumnDefinition Width="197*"/>
                <ColumnDefinition Width="221*"/>
                <ColumnDefinition Width="175*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*" />
                <RowDefinition Height="95*" />
                <RowDefinition Height="0*" />
                <!--<RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1.6*" />-->
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" Grid.ColumnSpan="7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.17*"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Grid.ColumnSpan="5"
                           Height="30"
                           Width="400"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontSize="14" FontWeight="Bold"
                           TextWrapping="NoWrap"
                           TextAlignment="Center"
                           Text="{Binding SaveResultMessage, Converter={StaticResource StringCodeToString}}"
                           Foreground="{StaticResource VietPark.Brushes.WayIn}"/>

                <Button Grid.Column="0" Style="{StaticResource MaterialDesignRaisedLightButton}" 
                        VerticalAlignment="Center" HorizontalAlignment="Center" 
                        Content="SAVE CHANGE" 
                        Width="140" Height="40"
                        Command="{Binding SaveCommand}" />
                
                <TextBlock Grid.Column="1" 
                           FontWeight="Normal" FontSize="14"
                           Text="LANE NAME"
                           TextAlignment="Right"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource VietPark.Brushes.WayIn}"
                                             />
                <TextBox Grid.Column="2" Margin="15 0 15 0" FontWeight="Normal" FontSize="16" TextAlignment="Center" VerticalAlignment="Center" 
                         Foreground="DarkRed" HorizontalAlignment="Stretch" 
                         Text="{Binding LaneName, Mode=TwoWay}" 
                         BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>

                <Border Grid.Column="3" BorderBrush="{StaticResource VietPark.Brushes.WayIn}" BorderThickness="1" Margin="5 -5 10 5">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Background="{StaticResource VietPark.Brushes.WayIn}">
                            <TextBlock VerticalAlignment="Center"
                            Foreground="White" 
                            TextAlignment="Center"
                            Text="DEFAULT LANE"
                            FontSize="14"/>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            
                            <RadioButton Grid.Column="0" x:Name="rdB_WayIn"
                                         Margin="5"
                                 VerticalAlignment="Center" HorizontalAlignment="Center"
                                IsChecked="{Binding Direction, ConverterParameter={x:Static enum:LaneDirection.In}, Converter={StaticResource EnumToBooleanConverter}, Mode=TwoWay}" 
                                GroupName="{Binding LaneId}" 
                                Content="WAY IN"
                                FontSize="14"
                                Style="{StaticResource MaterialDesignLightRadioButton}"
                                Foreground="{StaticResource VietPark.Brushes.WayIn}" Checked="rdB_WayIn_Checked"
                                />
                            <RadioButton Grid.Column="1" x:Name="rdB_WayOut"
                                IsChecked="{Binding Path=Direction, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enum:LaneDirection.Out}}" 
                                GroupName="{Binding LaneId}"  
                                HorizontalAlignment="Center" VerticalAlignment="Center" 
                                Content="WAY OUT"
                                FontSize="14"
                                         Margin="5"
                                Style="{StaticResource MaterialDesignLightRadioButton}"
                                Foreground="{StaticResource VietPark.Brushes.WayIn}" Checked="rdB_WayOut_Checked"/>
                        </Grid>
                        
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="1" Grid.ColumnSpan="7" >

                <materialDesign:Card Background="{DynamicResource MaterialDesignBackground}">
                    <StackPanel>
                        <Expander
                                  HorizontalAlignment="Stretch"
                                  Header="CAMERA" Foreground="{StaticResource VietPark.Brushes.WayIn}">
                            <StackPanel
                                            Orientation="Vertical"
                                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                                            Margin="24,8,24,16">
                                <StackPanel/>
                                <Grid Height="400">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.4*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" Name="gWayIn">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="0.5*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="WAY IN 1" 
                                                        FontSize="14" Margin="5 0"
                                                        Foreground="{StaticResource VietPark.Brushes.WayIn}" 
                                                        VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>

                                            <TextBox Name="ipcamewayin1" Grid.Row="0" Grid.Column="1" Foreground="DarkBlue" Margin="5 0"
                                                    TextAlignment="Center" HorizontalContentAlignment="Center"
                                                    FontSize="14" Controls:TextBoxHelper.Watermark="IP"
                                                    Text="{Binding FrontInCamera, Mode=TwoWay}" 
                                                    materialDesign:HintAssist.Hint="IP"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                    VerticalAlignment="Center"></TextBox>
                                            <TextBox Name="portcamewayin1" Grid.Row="0" Grid.Column="2" Foreground="DarkBlue" Margin="5 0" 
                                                    TextAlignment="Center" HorizontalContentAlignment="Center"
                                                    FontSize="14" Controls:TextBoxHelper.Watermark="Port"
                                                    materialDesign:HintAssist.Hint="PORT"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding FrontInPort, Mode=TwoWay}"></TextBox>
                                            <TextBox Name="usercamewayin1" Grid.Row="0" Grid.Column="3" Foreground="DarkBlue" Margin="5 0" VerticalAlignment="Center"
                                                    TextAlignment="Center" HorizontalContentAlignment="Center"
                                                    FontSize="14" Controls:TextBoxHelper.Watermark="User"
                                                    Text="{Binding FrontInUserName, Mode=TwoWay}"
                                                    materialDesign:HintAssist.Hint="USER NAME"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>
                                            <TextBox Name="passcamewayin1" Grid.Row="0" Grid.Column="4" Foreground="DarkBlue" Margin="5 0" VerticalAlignment="Center"
                                                    TextAlignment="Center" HorizontalContentAlignment="Center"
                                                    FontSize="14" Controls:TextBoxHelper.Watermark="Password"
                                                    Text="{Binding FrontInPassword, Mode=TwoWay}"
                                                    materialDesign:HintAssist.Hint="PASSWORD"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>
                                            <ComboBox Name="typecamewayin1" Grid.Row="0" Grid.Column="6" Margin="5 0" FontSize="14" Foreground="DarkBlue"
                                                    IsEditable="True" VerticalAlignment="Center" 
                                                    ItemsSource="{Binding Path=CameraTypes}" 
                                                    SelectedItem="{Binding Path=FrontInType, Mode=TwoWay}"
                                                    materialDesign:HintAssist.Hint="CHOOSE CAMERA TYPE"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"/>

                                            <TextBox Name="camerainchannel1" Grid.Row="0" Grid.Column="5" Foreground="DarkBlue" Margin="5 0" 
                                                    TextAlignment="Center" HorizontalContentAlignment="Center"
                                                    FontSize="14" Controls:TextBoxHelper.Watermark="Channel"
                                                    materialDesign:HintAssist.Hint="CHANNEL"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding FrontInChannel, Mode=TwoWay}"/>

                                            <!--<Button Grid.Row="0" Grid.Column="6"
                                                    Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                                    ToolTip="Review Camera">
                                                <materialDesign:PackIcon
                                                    Kind="CameraMeteringCenter"
                                                    Height="27"
                                                    Width="27" />
                                            </Button>-->

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="WAY IN 2" 
                                                       FontSize="14" Margin="5 0"
                                                       Foreground="{StaticResource VietPark.Brushes.WayIn}" 
                                                       VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                                            <TextBox Name="ipcamewayin2" Grid.Row="1" Grid.Column="1" Foreground="DarkBlue" Margin="5 0" VerticalAlignment="Center"
                                                     TextAlignment="Center" HorizontalContentAlignment="Center"
                                                     FontSize="14" Controls:TextBoxHelper.Watermark="IP"
                                                     Text="{Binding BackInCamera, Mode=TwoWay}"
                                                     materialDesign:HintAssist.Hint="IP"
                                                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>
                                            <TextBox Name="portcamewayin2" Grid.Row="1" Grid.Column="2" Foreground="DarkBlue" Margin="5 0" VerticalAlignment="Center"
                                                     TextAlignment="Center" HorizontalContentAlignment="Center"
                                                     FontSize="14" Controls:TextBoxHelper.Watermark="Port"
                                                     Text="{Binding BackInPort, Mode=TwoWay}"
                                                     materialDesign:HintAssist.Hint="PORT"
                                                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>
                                            <TextBox Name="usercamewayin2" Grid.Row="1" Grid.Column="3" Foreground="DarkBlue" Margin="5 0" VerticalAlignment="Center"
                                                     TextAlignment="Center" HorizontalContentAlignment="Center"
                                                     FontSize="14"  Controls:TextBoxHelper.Watermark="User"
                                                     Text="{Binding BackInUserName, Mode=TwoWay}"
                                                     materialDesign:HintAssist.Hint="USER NAME"
                                                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>
                                            <TextBox Name="passcamewayin2" Grid.Row="1" Grid.Column="4" Foreground="DarkBlue" Margin="5 0" VerticalAlignment="Center"
                                                     TextAlignment="Center" HorizontalContentAlignment="Center"
                                                     FontSize="14" Controls:TextBoxHelper.Watermark="Password"
                                                     Text="{Binding BackInPassword, Mode=TwoWay}"
                                                     materialDesign:HintAssist.Hint="PASSWORD"
                                                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>

                                            <ComboBox Name="typecamewayin2" Grid.Row="1" Grid.Column="6" Margin="5 0" FontSize="14" Foreground="DarkBlue"
                                                      IsEditable="True" VerticalAlignment="Center"
                                                      ItemsSource="{Binding Path=CameraTypes}" 
                                                      SelectedItem="{Binding Path=BackInType, Mode=TwoWay}"
                                                      materialDesign:HintAssist.Hint="CHOOSE CAMERA TYPE"
                                                      BorderBrush="{StaticResource VietPark.Brushes.WayIn}"/>

                                            <TextBox Name="camerainchannel2" Grid.Row="1" Grid.Column="5" Foreground="DarkBlue" Margin="5 0" 
                                                    TextAlignment="Center" HorizontalContentAlignment="Center"
                                                    FontSize="14" Controls:TextBoxHelper.Watermark="Channel"
                                                    materialDesign:HintAssist.Hint="CHANNEL"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding BackInChannel, Mode=TwoWay}"/>

                                            <!--<Button Grid.Row="1" Grid.Column="6"
                                                    Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                                    ToolTip="Review Camera">
                                                <materialDesign:PackIcon
                                                    Kind="CameraMeteringCenter"
                                                    Height="27"
                                                    Width="27" />
                                            </Button>-->

                                        </Grid>

                                        <Grid Grid.Row="1" Name="gWayOut">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="0.5*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="WAY OUT 1" 
                                                        FontSize="14" Margin="5 0"
                                                        Foreground="{StaticResource VietPark.Brushes.WayIn}" 
                                                        VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>

                                            <TextBox Name="ipcamewayout1" Grid.Row="0" Grid.Column="1" Foreground="DarkBlue" Margin="5 0"
                                                    TextAlignment="Center" HorizontalContentAlignment="Center"
                                                    FontSize="14" Controls:TextBoxHelper.Watermark="IP"
                                                    Text="{Binding FrontOutCamera, Mode=TwoWay}" 
                                                    materialDesign:HintAssist.Hint="IP"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                    VerticalAlignment="Center"></TextBox>
                                            <TextBox Name="portcamewayout1" Grid.Row="0" Grid.Column="2" Foreground="DarkBlue" Margin="5 0" 
                                                    TextAlignment="Center" HorizontalContentAlignment="Center"
                                                    FontSize="14" Controls:TextBoxHelper.Watermark="Port"
                                                    materialDesign:HintAssist.Hint="PORT"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding FrontOutPort, Mode=TwoWay}"></TextBox>
                                            <TextBox Name="usercamewayout1" Grid.Row="0" Grid.Column="3" Foreground="DarkBlue" Margin="5 0" VerticalAlignment="Center"
                                                    TextAlignment="Center" HorizontalContentAlignment="Center"
                                                    FontSize="14" Controls:TextBoxHelper.Watermark="User"
                                                    Text="{Binding FrontOutUserName, Mode=TwoWay}"
                                                    materialDesign:HintAssist.Hint="USER NAME"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>
                                            <TextBox Name="passcamewayout1" Grid.Row="0" Grid.Column="4" Foreground="DarkBlue" Margin="5 0" VerticalAlignment="Center"
                                                    TextAlignment="Center" HorizontalContentAlignment="Center"
                                                    FontSize="14" Controls:TextBoxHelper.Watermark="Password"
                                                    Text="{Binding FrontOutPassword, Mode=TwoWay}"
                                                    materialDesign:HintAssist.Hint="PASSWORD"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>
                                            <ComboBox Name="typecamewayout1" Grid.Row="0" Grid.Column="6" Margin="5 0" FontSize="14" Foreground="DarkBlue"
                                                    IsEditable="True" VerticalAlignment="Center" 
                                                    ItemsSource="{Binding Path=CameraTypes}" 
                                                    SelectedItem="{Binding Path=FrontOutType, Mode=TwoWay}"
                                                    materialDesign:HintAssist.Hint="CHOOSE CAMERA TYPE"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"/>

                                            <TextBox Name="camerachannelout1" Grid.Row="0" Grid.Column="5" Foreground="DarkBlue" Margin="5 0" 
                                                    TextAlignment="Center" HorizontalContentAlignment="Center"
                                                    FontSize="14" Controls:TextBoxHelper.Watermark="Channel"
                                                    materialDesign:HintAssist.Hint="CHANNEL"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding FrontOutChannel, Mode=TwoWay}"/>

                                            <!--<Button Grid.Row="0" Grid.Column="6"
                                                    Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                                    ToolTip="Review Camera">
                                                <materialDesign:PackIcon
                                                    Kind="CameraMeteringCenter"
                                                    Height="27"
                                                    Width="27" />
                                            </Button>-->

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="WAY OUT 2" 
                                                       FontSize="14" Margin="5 0"
                                                       Foreground="{StaticResource VietPark.Brushes.WayIn}" 
                                                       VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                                            <TextBox Name="ipcamewayout2" Grid.Row="1" Grid.Column="1" Foreground="DarkBlue" Margin="5 0" VerticalAlignment="Center"
                                                     TextAlignment="Center" HorizontalContentAlignment="Center"
                                                     FontSize="14" Controls:TextBoxHelper.Watermark="IP"
                                                     Text="{Binding BackOutCamera, Mode=TwoWay}"
                                                     materialDesign:HintAssist.Hint="IP"
                                                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>
                                            <TextBox Name="portcamewayout2" Grid.Row="1" Grid.Column="2" Foreground="DarkBlue" Margin="5 0" VerticalAlignment="Center"
                                                     TextAlignment="Center" HorizontalContentAlignment="Center"
                                                     FontSize="14" Controls:TextBoxHelper.Watermark="Port"
                                                     Text="{Binding BackOutPort, Mode=TwoWay}"
                                                     materialDesign:HintAssist.Hint="PORT"
                                                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>
                                            <TextBox Name="usercamewayout2" Grid.Row="1" Grid.Column="3" Foreground="DarkBlue" Margin="5 0" VerticalAlignment="Center"
                                                     TextAlignment="Center" HorizontalContentAlignment="Center"
                                                     FontSize="14"  Controls:TextBoxHelper.Watermark="User"
                                                     Text="{Binding BackOutUserName, Mode=TwoWay}"
                                                     materialDesign:HintAssist.Hint="USER NAME"
                                                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>
                                            <TextBox Name="passcamewayout2" Grid.Row="1" Grid.Column="4" Foreground="DarkBlue" Margin="5 0" VerticalAlignment="Center"
                                                     TextAlignment="Center" HorizontalContentAlignment="Center"
                                                     FontSize="14" Controls:TextBoxHelper.Watermark="Password"
                                                     Text="{Binding BackOutPassword, Mode=TwoWay}"
                                                     materialDesign:HintAssist.Hint="PASSWORD"
                                                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"></TextBox>

                                            <ComboBox Name="typecamewayout2" Grid.Row="1" Grid.Column="6" Margin="5 0" FontSize="14" Foreground="DarkBlue"
                                                      IsEditable="True" VerticalAlignment="Center"
                                                      ItemsSource="{Binding Path=CameraTypes}" 
                                                      SelectedItem="{Binding Path=BackOutType, Mode=TwoWay}"
                                                      materialDesign:HintAssist.Hint="CHOOSE CAMERA TYPE"
                                                      BorderBrush="{StaticResource VietPark.Brushes.WayIn}"/>

                                            <TextBox Name="camerachannelout2" Grid.Row="1" Grid.Column="5" Foreground="DarkBlue" Margin="5 0" 
                                                    TextAlignment="Center" HorizontalContentAlignment="Center"
                                                    FontSize="14" Controls:TextBoxHelper.Watermark="Channel"
                                                    materialDesign:HintAssist.Hint="CHANNEL"
                                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding BackOutChannel, Mode=TwoWay}"/>

                                            <!--<Button Grid.Row="1" Grid.Column="6"
                                                    Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                                    ToolTip="Review Camera">
                                                <materialDesign:PackIcon
                                                    Kind="CameraMeteringCenter"
                                                    Height="27"
                                                    Width="27" />
                                            </Button>-->

                                        </Grid>

                                    </Grid>

                                </Grid>
                            </StackPanel>
                        </Expander>
                        <Border
                                    Background="{DynamicResource MaterialDesignDivider}"
                                    Height="1"
                                    HorizontalAlignment="Stretch"
                                    SnapsToDevicePixels="True" />
                        <Expander
                                    HorizontalAlignment="Stretch"
                                    Header="VEHICLE TYPE" Foreground="{StaticResource VietPark.Brushes.WayIn}">
                            <StackPanel
                                    Orientation="Vertical"
                                    TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                                    Margin="24,8,24,16">
                                <ComboBox
                                        materialDesign:HintAssist.Hint="CHOOSE VEHICLE TYPE" Margin="0 5 0 5" Width="870"
                                        BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                        FontSize="14" HorizontalContentAlignment="Left"
                                        HorizontalAlignment="Left"
                                        ItemsSource="{Binding VehicleTypes}" SelectedItem="{Binding SelectedVehicleType, Mode=TwoWay}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <Label  Content="{Binding  Path=.,Mode=OneWay, 
                                                    Converter={StaticResource EnumItemsConverter}}"
                                                    Height="Auto"
                                                    Margin="0" 
                                                    VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                        </Expander>
                        <Border
                                    Background="{DynamicResource MaterialDesignDivider}"
                                    Height="1"
                                    HorizontalAlignment="Stretch"
                                    SnapsToDevicePixels="True" />
                        <Expander
                                    HorizontalAlignment="Stretch"
                                    Header="CARD READER" Foreground="{StaticResource VietPark.Brushes.WayIn}">
                            <StackPanel
                                    Orientation="Vertical"
                                    TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                                    Margin="24,8,24,16">
                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <ComboBox Grid.Column="0"
                                                  BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                  FontSize="14" HorizontalContentAlignment="Left"
                                                  Name="CardTypeComboBox" SelectedIndex="0"
                                                  ItemsSource="{Binding CardTypes}" 
                                                  SelectedValue="{Binding CurrentCardType, Mode=TwoWay}" 
                                                  SelectionChanged="CardTypeComboBox_SelectionChanged" Margin="0,4" 
                                                  materialDesign:HintAssist.Hint="CHOOSE CARD READER TYPE" />
                                        

                                        <ComboBox Grid.Column="1" Grid.ColumnSpan="3"
                                                  BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                  Margin="5,4"
                                                  FontSize="14" DisplayMemberPath="SerialNumber"
                                                  Name="AvilableModWinsComboBox"
                                                  materialDesign:HintAssist.Hint="CHOOSE SERIAL CARD READER" 
                                                  ItemsSource="{Binding AvilableModWinsCards, Mode=TwoWay}" SelectedValue="{Binding CurrentCardSelected, Mode=TwoWay}"/>

                                        <ComboBox Grid.Column="1" Grid.ColumnSpan="3"
                                                  BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                  Margin="5,4"
                                                  FontSize="14" DisplayMemberPath="DeviceName"
                                                  Name="AvailableNFCReader"
                                                  materialDesign:HintAssist.Hint="CHOOSE NFC CARD READER" 
                                                  ItemsSource="{Binding AvailableNFCCards, Mode=TwoWay}" SelectedValue="{Binding CurrentCardSelected, Mode=TwoWay}"
                                                  Visibility="Hidden" />
                                        
                                        <ComboBox Grid.Column="1" Grid.ColumnSpan="3"
                                                  BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                  Margin="5,4"
                                                  FontSize="14" DisplayMemberPath="DeviceName"
                                                  Name="AvailableProxiesCardReader"
                                                  materialDesign:HintAssist.Hint="CHOOSE COM PORT" 
                                                  ItemsSource="{Binding AvailableProxiesCards, Mode=TwoWay}" SelectedValue="{Binding CurrentCardSelected, Mode=TwoWay}"
                                                  Visibility="Hidden" />
                                        <WrapPanel Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock>The same far card</TextBlock>
                                            <ToggleButton Grid.Column="4"
                                                 Style="{StaticResource MaterialDesignSwitchDarkToggleButton}"
                                                 ToolTip="Turn on or off function"
                                                 IsChecked="{Binding Path=UsageAsTheSameFarCard, Mode=TwoWay}"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Margin="30 0 0 0"/>    
                                        </WrapPanel>
                                           
                                        <WrapPanel Visibility="Hidden" x:Name="tcpippannel" Grid.Column="1" Grid.ColumnSpan="3">
                                            <TextBox Grid.Column="1" Grid.ColumnSpan="2"
                                                     Margin="5,4"
                                                     x:Name="txtTcpIp"
                                                     FontSize="14" 
                                                     TextWrapping="NoWrap" 
                                                     Text="{Binding Path=CurrentIp, Mode=TwoWay}"
                                                     materialDesign:HintAssist.Hint="IP ADDRESS ..."
                                                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
                                                     Controls:TextBoxHelper.Watermark="Ip"/>
                                            <TextBox Grid.Column="3"
                                                     Margin="5,4"
                                                     x:Name="txtPort"
                                                     FontSize="14"
                                                     TextWrapping="NoWrap"  
                                                     Text="{Binding Path=CurrentPort, Mode=TwoWay}"
                                                     materialDesign:HintAssist.Hint="PORT ..."
                                                     Controls:TextBoxHelper.Watermark="Port"
                                                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"/>
                                            <ComboBox  Grid.Column="3" 
                                                       Visibility="Hidden" x:Name="cbAntenna" 
                                                       Margin="5 4" FontSize="14" 
                                                       SelectedIndex="0"
                                                       SelectedValue="{Binding CurrentAntennaType, Mode=TwoWay}"
                                                       ItemsSource="{Binding AntennaTypes}"
                                                       BorderBrush="{StaticResource VietPark.Brushes.WayIn}"
