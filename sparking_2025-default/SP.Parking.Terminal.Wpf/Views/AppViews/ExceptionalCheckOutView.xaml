<Views:BaseView x:Class="SP.Parking.Terminal.Wpf.Views.AppViews.ExceptionalCheckOutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:Views="clr-namespace:SP.Parking.Terminal.Wpf.Views"
             xmlns:common="clr-namespace:SP.Parking.Terminal.Wpf.Views.Common"
             xmlns:w="clr-namespace:SP.Parking.Terminal.Wpf.Utility" 
                xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="500" Background="White">
    <Views:BaseView.Resources>
        <w:LevelColorConverter x:Key="LevelColorConverter" />
        <w:StringCodeToString x:Key="StringCodeToString" />
        <w:TextboxValidationRule x:Key="TextboxValidationRule" />
    </Views:BaseView.Resources>

    <Grid Margin="5" Background="White">
        <Border BorderThickness="2" BorderBrush="{StaticResource VietPark.Brushes.WayIn}" 
               >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="{StaticResource VietPark.Brushes.WayIn}">
                    <PasswordBox Name="Pass4Confirm" Height="20" Width="100" Margin="5 0 360 0" PasswordChanged="Pass4Confirm_PasswordChanged" Foreground="White" >
                        <PasswordBox.CaretBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </PasswordBox.CaretBrush>
                        <PasswordBox.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </PasswordBox.BorderBrush>
                    </PasswordBox>
                    <TextBlock HorizontalAlignment="Center"
                               Margin="0,10,0,10" 
                               Text="CHO XE RA NGOẠI LỆ"
                               FontSize="23" 
                               FontWeight="Normal"
                               Height="30" 
                               VerticalAlignment="Center"
                               Foreground="White"/>
                    <Button Background="Transparent" Foreground="{StaticResource VietPark.Brushes.WayOut}"
                            Style="{StaticResource MahApps.Styles.Button.Flat}"
                            Content="{iconPacks:FontAwesome Kind=PowerOffSolid, Flip=Horizontal, Height=20, Width=20}"
                            ToolTip="Trở lại giao diện chính"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Cursor="Hand" 
                            Command="{Binding Path=GoBackCommand}"></Button>
                </Grid>
                
                <Grid Grid.Row="1"
                      Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="5">
                        <TextBlock Text="Mã thẻ: "
                                   FontSize="18"/>
                        <TextBlock Text="{Binding Path=SelectedItem.CardLabel}" FontFamily="Time New Roman"
                                   FontSize="18"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="5">
                        <TextBlock Text="Biển số xe: "
                                   FontSize="18"/>
                        <TextBlock Text="{Binding Path=SelectedItem.VehicleNumber}" FontFamily="Time New Roman"
                                   Margin="10,0,0,0"
                                   FontSize="18"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="5">
                        <TextBlock Text="Giờ vào: "
                                   FontSize="18"
                                   Height="24"
                                   VerticalAlignment="Center"/>
                        <Border BorderBrush="{x:Null}" 
                                Height="24"
                                Margin="10,0,0,0">
                            <TextBlock Text="{Binding Path=SelectedItem.StrCheckInTime}" FontFamily="Time New Roman"
                                       FontSize="18"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="5">
                        <TextBlock Text="Phí phải trả: "
                                   FontSize="18"/>
                        <TextBlock Text="{Binding Path=ParkingFee,StringFormat={}{0:#,#} VND}"
                                   Margin="10,0,0,0"
                                   FontSize="18" />
                    </StackPanel>
                    
                </Grid>
                <Grid Margin="5 0 5 0" Grid.Row="2" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>   
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>  
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox Content="Khóa thẻ"
                          Grid.Row="0"
                          FontSize="16"
                          Margin="0,5,0,0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          IsChecked="{Binding Path=IsBlocked}"
                          Style="{StaticResource MaterialDesignFilterChipPrimaryCheckBox}"/>
                    
                    <Views:CameraView x:Name="FrontCamera"  HorizontalAlignment="Stretch" Margin="0 0 0 2" VerticalAlignment="Stretch"  Grid.Row="1"/>
                    <Views:CameraView x:Name="BackCamera" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch"  Grid.Row="2"/>
                    <Grid Grid.Column="1" Grid.RowSpan="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid Margin="5 0 0 0" Grid.Row="0" Background="{StaticResource VietPark.Brushes.WayIn}" VerticalAlignment="Bottom">
                            <common:StreachableTextBlock Grid.Row="0" Margin="10" TBContent="Lý do cho ra ngoại lệ: "
                                             HorizontalAlignment="Left" 
                                             TextAlignment="Left" Height="25" 
                                             FontWeight="Normal" Foreground="White"/>
                        </Grid>
                        <Border Margin="5 0 0 0" Grid.Row="1" BorderBrush="{StaticResource VietPark.Brushes.WayIn}" BorderThickness="1">
                            <TextBox Name="TextBoxReason" Grid.Row="1" FontSize="16"
                                     TextChanged="Pass4Confirm_PasswordChanged"
                                     Margin="5,0,5,0" BorderThickness="0">
                                <Binding Path="Reason">
                                    <Binding.ValidationRules>
                                        <w:TextboxValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox>
                        </Border>
                        
                    </Grid>
                   
                </Grid>
                
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
                    
                    <Button x:Name="btConfirm" VerticalAlignment="Center"
                            IsEnabled="False"
                        Margin="20"
                        FontSize="20"
                        Height="40"
                        Width="152"
                        Content="Hoàn tất"
                        Command="{Binding Path=ExceptionalCheckoutCommand}"/>
                </StackPanel>
                <TextBlock Grid.Row="6"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Margin="0 0 0 2"
                           FontWeight="Bold"
                           TextAlignment="Center" 
                           Foreground="{Binding Path=MessageLevel, Converter={StaticResource LevelColorConverter}}"
                           Text="{Binding Path=ErrorMessage}"/>
            </Grid>
        </Border>
        
    </Grid>
</Views:BaseView>
