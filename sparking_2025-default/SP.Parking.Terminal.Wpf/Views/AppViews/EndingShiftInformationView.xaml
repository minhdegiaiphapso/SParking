<Views:BaseView x:Class="SP.Parking.Terminal.Wpf.Views.AppViews.EndingShiftInformationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:Views="clr-namespace:SP.Parking.Terminal.Wpf.Views"
             xmlns:common="clr-namespace:SP.Parking.Terminal.Wpf.Views.Common"
             xmlns:w="clr-namespace:SP.Parking.Terminal.Wpf.Utility"
             mc:Ignorable="d" 
                
             d:DesignHeight="600" d:DesignWidth="500">
    <!--<UserControl.Background>
        <SolidColorBrush Opacity="0.5" Color="White" />
    </UserControl.Background>-->
    <Grid>
        <Border BorderThickness="3" BorderBrush="{DynamicResource MahApps.Brushes.Accent}" 
                Width="500" Height="550">
            <Grid VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Center" FontFamily="Time News Roman"
                           Grid.Column="0"
                           Grid.ColumnSpan="2"
                            Margin="0,10,0,0" 
                            Text="THỐNG KÊ" 
                            FontSize="30" 
                            FontStretch="ExtraCondensed" 
                            FontWeight="Normal"
                            Height="40" 
                            VerticalAlignment="Top"/>

                <!-- Staff id -->
                <TextBlock Grid.Column="0"
                           Grid.Row="1"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Text="Mã nhân viên: " FontFamily="Time News Roman"
                           FontSize="20"/>
                <TextBlock Grid.Column="1"
                           Grid.Row="1"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding Path=StaffID}" FontFamily="Time News Roman"
                           FontSize="20"/>

                <!-- Staff name -->
                <TextBlock Grid.Column="0"
                           Grid.Row="2"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Text="Tên nhân viên: " FontFamily="Time News Roman"
                           FontSize="20"/>
                <TextBlock Grid.Column="1"
                           Grid.Row="2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding Path=StaffName}" FontFamily="Time News Roman"
                           FontSize="20"/>

                <!-- Begin Time-->
                <TextBlock Grid.Column="0"
                           Grid.Row="3"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Text="Giờ nhận ca: " FontFamily="Time News Roman"
                           FontSize="20"/>
                <TextBlock Grid.Column="1"
                           Grid.Row="3"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding Path=BeginTime}" FontFamily="Time News Roman"
                           FontSize="20"/>

                <!-- End Time-->
                <TextBlock Grid.Column="0"
                           Grid.Row="4"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Text="Giờ giao ca: " FontFamily="Time News Roman"
                           FontSize="20"/>
                <TextBlock Grid.Column="1"
                           Grid.Row="4"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding Path=EndTime}" FontFamily="Time News Roman"
                           FontSize="20"/>

                <!-- Number of used cards-->
                <TextBlock Grid.Column="0"
                           Grid.Row="5"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Text="Tổng số tiền đã thu: " FontFamily="Time News Roman"
                           FontSize="20"/>
                <TextBlock Grid.Column="1"
                           Grid.Row="5"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding Path=StrTotalAmount}" FontFamily="Time News Roman"
                           FontSize="20"/>

                <!-- Revenue -->
                <TextBlock Grid.Column="0"
                           Grid.Row="6"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Text="Tổng tiền thực thu: " FontFamily="Time News Roman"
                           FontSize="20"/>
                <TextBox Grid.Column="1"
                         Grid.Row="6"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         Width="150"
                         Text="{Binding Path=Revenue}" FontFamily="Time News Roman"
                         FontSize="20" PreviewTextInput="TextBox_PreviewTextInput"/>

                <!--Button Dang xuat-->
                <StackPanel Grid.Row="10"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Grid.Column="0"
                        VerticalAlignment="Top"
                        Margin="20"
                        FontSize="20"
                        Height="40"
                        Width="152"
                        Content="Đăng xuất" FontFamily="Time News Roman"
                        Command="{Binding Path=LogoutCommand}"
                        Style="{StaticResource  MahApps.Styles.Button.Square.Accent}"/>

                    <Button Grid.Column="0"
                        VerticalAlignment="Top"
                        Margin="20"
                        FontSize="20"
                        Height="40"
                        Width="152"
                        Content="Hủy bỏ"
                        Command="{Binding Path=BackCommand}" FontFamily="Time News Roman"
                        Style="{DynamicResource MahApps.Styles.Button.Square.Accent}"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Views:BaseView>
