<Views:BaseView x:Class="SP.Parking.Terminal.Wpf.Views.AppViews.Login"
        xmlns:Views="clr-namespace:SP.Parking.Terminal.Wpf.Views"
        xmlns:w="clr-namespace:SP.Parking.Terminal.Wpf.Utility"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        d:DesignHeight="600" d:DesignWidth="500" Background="Transparent"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!--<UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>-->
    <Views:BaseView.Resources>
        <w:BoolVisiblilityConverter x:Key="BoolVisibility" />
        <w:StringCodeToString x:Key="StringCodeToString" />
    </Views:BaseView.Resources>
    <Border BorderThickness="1" BorderBrush="{StaticResource VietPark.Brushes.WayIn}"  Width="500" Height="500">
        <StackPanel HorizontalAlignment="Center" Margin="0 100 0 0">
            <Image Source="/v.parkIpro_menubar.png" Width="300" Height="50"/>
            <StackPanel HorizontalAlignment="Center" Margin="0 50 0 0"  Width="400">
                <Border BorderThickness="1" BorderBrush="{StaticResource VietPark.Brushes.WayIn}">
                    <Grid Height="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Content="{iconPacks:FontAwesome UserAltSolid}" Foreground="{StaticResource VietPark.Brushes.WayIn}" />
                        <TextBox Grid.Row="0"  VerticalAlignment="Center"  BorderThickness="0" 
                            Text="{Binding Username, Mode=TwoWay}"
                            Controls:TextBoxHelper.Watermark="USER NAME" KeyUp="txt_KeyUp"
                            materialDesign:HintAssist.Hint="{StaticResource textHint.username}"
                            materialDesign:TextFieldAssist.HasClearButton="True" Margin="44,8,29,8" Grid.ColumnSpan="2"     />
                    </Grid>
                </Border>

                <Border BorderThickness="1" BorderBrush="{StaticResource VietPark.Brushes.WayIn}" Margin="0,10,0,0" >
                    <Grid Height="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Content="{iconPacks:FontAwesome LockSolid}" Foreground="{StaticResource VietPark.Brushes.WayIn}" />
                        <PasswordBox Grid.Row="0" VerticalAlignment="Center" BorderThickness="0" 
                                w:PasswordBoxHelper.Attach="True"  
                                w:PasswordBoxHelper.Password="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Controls:TextBoxHelper.Watermark="PASSWORD" KeyUp="txt_KeyUp"
                                materialDesign:HintAssist.Hint="{StaticResource textHint.password}"
                                materialDesign:TextFieldAssist.HasClearButton="True" Grid.ColumnSpan="2" Height="25" Margin="44,6,29,9"     />
                    </Grid>
                </Border>

                <Button Name="LoginButton"
                        Content="{StaticResource button.login}"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        FontWeight="Normal"
                        Margin="0 20 0 0" Cursor="Hand"
                        VerticalAlignment="Top"
                        Foreground="White"
                        Height="35"
                        Command="{Binding LoginCommand}" Width="200"
                        />

                <Border HorizontalAlignment="Stretch" 
                            BorderBrush="{x:Null}" 
                            Margin="0,20,0,0"  
                            Height="50"
                            Visibility="{Binding HasError, Converter={StaticResource BoolVisibility}}"
                            Opacity=".5">
                    <TextBlock HorizontalAlignment ="Center"
                            Margin="5"
                            VerticalAlignment="Center" 
                            Foreground="Red"
                            FontSize="14"
                            TextWrapping="Wrap"
                            TextAlignment="Center"
                            FontWeight="Bold"
                            Text="{Binding ResultMessage, Converter={StaticResource StringCodeToString}}"/>
                </Border>
            </StackPanel>
        </StackPanel>
    </Border>
</Views:BaseView>
