<Views:BaseView x:Class="SP.Parking.Terminal.Wpf.Views.AppViews.LaneKeyConfigurationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:Views="clr-namespace:SP.Parking.Terminal.Wpf.Views"
             xmlns:common="clr-namespace:SP.Parking.Terminal.Wpf.Views.Common"
             xmlns:locals="clr-namespace:SP.Parking.Terminal.Wpf.Views.AppViews"
             xmlns:w="clr-namespace:SP.Parking.Terminal.Wpf.Utility"
             mc:Ignorable="d" 
             d:DesignWidth="500" d:DesignHeight="620" Background="White">
    <GroupBox  Name="MainGroupBox" Header="{Binding LaneId}" Height="595" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140*"/>
                    <ColumnDefinition Width="35*"/>
                    <ColumnDefinition Width="241*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <!--<RowDefinition Height="1*" />-->
                </Grid.RowDefinitions>

                <!-- check in -->
                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0 2" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center"
                       Grid.Column="0" Grid.Row="0" 
                       Text="LOGOUT"
                       HorizontalAlignment="Left"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"    />
                </StackPanel>
                <locals:HookTextBox Margin="0,2,0,2" 
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="0" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding LogoutKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>

                <!-- check out -->
                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2,0,1.778" Grid.Row="1" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center"
                       Grid.Column="0" Grid.Row="1" 
                       Text="CHECK OUT"
                       HorizontalAlignment="Left"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"    />
                </StackPanel>
                <locals:HookTextBox Margin="0,2,0,1.778" 
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="1" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding CheckOutKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>

                <!-- cancel check out -->
                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2.222,0,1.778" Grid.Row="2" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14"
                       FontWeight="Normal" 
                       VerticalAlignment="Center"
                       Grid.Column="0" Grid.Row="2" 
                       Text="CANCEL CHECK OUT"
                       HorizontalAlignment="Left"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>
                <locals:HookTextBox Margin="0,2.222,0,1.778" 
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="2" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding CancelCheckOutKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>

                <!-- Change lane -->
                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2.222,0,1.778" Grid.Row="3" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center"
                       Grid.Column="0" Grid.Row="3" 
                       Text="CHANGE LANE"
                       HorizontalAlignment="Left"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>
                <locals:HookTextBox Margin="0,2.222,0,1.778"
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="3" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding ChangeLaneDirectionKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>

                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2.222,0,1.778" Grid.Row="4" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center"
                       Grid.Column="0" Grid.Row="4" 
                       Text="CHANGE STATUS LANE"
                       HorizontalAlignment="Left"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>
                <locals:HookTextBox Margin="0,2.222,0,1.778" 
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="4" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding ChangeLaneKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>
                <!-- Search -->
                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2.222,0,1.778" Grid.Row="5" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center"
                       Grid.Column="0" Grid.Row="5" 
                       Text="SEARCH"
                       HorizontalAlignment="Left"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>
                <locals:HookTextBox Margin="0,2.222,0,1.778" 
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="5" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding SearchKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>

                <!-- Show vehicle type -->
                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2" Grid.Row="6" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center" 
                       Text="SELECT VEHILCE"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>
                <locals:HookTextBox Margin="0,2" 
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="6" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding ShowVehicleTypeKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}" TextChanged="HookTextBox_TextChanged"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>

                <!-- Prolific Card Reader -->
                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2" Grid.Row="7" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center" 
                       Text="ACTIVE UHF READER"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>
                <locals:HookTextBox Margin="0,2,0,1" 
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="7" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Right"
                     Text="{Binding ActivateProlificCardReaderKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}" Width="237"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>

                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2.222,0,1.778" Grid.Row="8" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center" 
                       Text="ACTIVE LONG READER"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>
                <locals:HookTextBox Margin="0,2.222,0,1.778"
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="8" 
                    
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding ActivateSoyalCardReaderKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>
                <!-- Print Bill  -->
                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2.222,0,1.778" Grid.Row="9" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center" 
                       Text="PRINT INVOICE"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>
                <locals:HookTextBox Margin="0,2.222,0,1.778"
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="9" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding PrintBillKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"               >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>

                <!-- Add New Number  -->
                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2.222,0,1.778" Grid.Row="10" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center" 
                       Text="ADD NUMBER PLATE"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>
                <locals:HookTextBox Margin="0,2.222,0,1.778" 
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="10" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding AddNewNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>

                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2.444,0,1.556" Grid.Row="13" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center" 
                       Text="BARRIER MANUAL"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>
                <locals:HookTextBox Margin="0,2.444,0,1.556" 
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="13" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding ForcedBarierKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>

                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2.444,0,1.556" Grid.Row="14" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center" 
                       Text="CASH OPEN"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>
                <locals:HookTextBox Margin="0,2.444,0,1.556" 
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="14" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding CashDrawerKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>

                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2.444,0,1.556" Grid.Row="15" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center" 
                       Text="CASHIER"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>

                <locals:HookTextBox Margin="0,2.444,0,1.556" 
                     FontSize="15"
                     TextAlignment="Left"
                     VerticalAlignment="Center"
                     Grid.Column="2" 
                     Grid.Row="15" 
                     Foreground="DarkRed"
                     HorizontalAlignment="Stretch"
                     Text="{Binding CashierKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     BorderBrush="{StaticResource VietPark.Brushes.WayIn}"           >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>
                <TextBlock Grid.Column="0"
                       Grid.ColumnSpan="3"
                       Grid.Row="16"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="Green"
                       FontWeight="Bold"
                       TextAlignment="Center" 
                       Text="{Binding Path=ResultMessage}" Margin="0,5.444,0,5.556"/>

                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" Margin="0,2.222,0,1.556" Grid.Row="11" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center" 
                       Text="CHECK IN"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>

                <StackPanel Background="{StaticResource VietPark.Brushes.WayIn}" 
                            Margin="0,2.444,0,1.556" Grid.Row="12" Grid.ColumnSpan="2">
                    <TextBlock FontSize="14" 
                       FontWeight="Normal" 
                       VerticalAlignment="Center" 
                       Text="CANCEL CHECK IN"
                       Margin="10 4"
                       TextAlignment="Left"
                       Foreground="White"/>
                </StackPanel>
                <locals:HookTextBox Margin="0,2.222,0,1.556"
                                    FontSize="15"
                                    TextAlignment="Left"
                                    VerticalAlignment="Center"
                                    Grid.Column="2" 
                                    Grid.Row="11" 
                                    Foreground="DarkRed"
                                    HorizontalAlignment="Stretch"
                                    Text="{Binding ConfirmCheckInKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"                >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>
                <locals:HookTextBox Margin="0,2.444,0,1.556"
                                    FontSize="15"
            	                    TextAlignment="Left"
            	                    VerticalAlignment="Center"
            	                    Grid.Column="2" 
            	                    Grid.Row="12" 
            	                    Foreground="DarkRed"
            	                    HorizontalAlignment="Stretch"
            	                    Text="{Binding CancelCheckInKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    BorderBrush="{StaticResource VietPark.Brushes.WayIn}"                >
                    <locals:HookTextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MahApps.Styles.TextBox}"/>
                    </locals:HookTextBox.Style>
                </locals:HookTextBox>
            </Grid>
            
            <Grid Grid.Row="1">
                <Button 
                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                    Content=" SAVE "
                    Command="{Binding Path=SaveCommand}"
                    VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </GroupBox>
