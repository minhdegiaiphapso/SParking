<controls:MetroWindow x:Class="SP.Parking.Terminal.Wpf.UI.PasswordWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:w="clr-namespace:SP.Parking.Terminal.Wpf.Utility"
                      WindowStyle="SingleBorderWindow"
                      Width="310"
                      Height="160"
                      WindowStartupLocation="CenterOwner"
                      ResizeMode="NoResize"
                      ShowInTaskbar="False"
                      BorderThickness="1"
                      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid>
        <StackPanel>
            <StackPanel Margin="0,30,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Grid>
                    <!--<Rectangle Width="182" Height="32" Stroke="{StaticResource MahApps.Brushes.Badged.Background}"></Rectangle>-->
                   
                    <PasswordBox Name="textPassword"
                                 BorderBrush="{StaticResource MahApps.Brushes.Badged.Background}" 
                                 Width="200" Height="30"
                                 controls:TextBoxHelper.Watermark="Enter your password ..."
                                 materialDesign:HintAssist.Hint="Enter your password ..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 KeyDown="textPassword_KeyDown" />
                </Grid>
                
            </StackPanel>

            <Button Name="ConfigButton"
                        Content="OPEN CONFIGURATION"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0"
                        VerticalAlignment="Top"
                        Width="auto" Height="30"
                        Foreground="White"
                        FontWeight="Normal"
                        FontSize="12"
                        Click="ConfigButton_Click" />

            <TextBlock Name="textResult"
                    HorizontalAlignment ="Center"
                            Margin="5"
                            VerticalAlignment="Center" 
                            Foreground="Red"
                            FontSize="14"
                            TextWrapping="Wrap"
                            TextAlignment="Center"
                            FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
