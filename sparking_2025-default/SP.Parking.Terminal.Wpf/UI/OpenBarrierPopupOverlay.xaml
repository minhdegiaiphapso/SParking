<Window x:Class="SP.Parking.Terminal.Wpf.UI.OpenBarrierPopupOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SP.Parking.Terminal.Wpf.UI"
        xmlns:common="clr-namespace:SP.Parking.Terminal.Wpf.Views.Common"
        xmlns:w="clr-namespace:SP.Parking.Terminal.Wpf.Utility"  
        Background="{DynamicResource WindowBackground}"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d"
         WindowStyle="None"
        ShowInTaskbar="False"
         Focusable="False"
        ShowActivated="False"
        Width="600" MaxHeight="300">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBackground" 
                        Color="White"
                        Opacity="0.5"/>
        <SolidColorBrush x:Key="TextBackground" 
                        Color="White"
                        Opacity="0.5"/>
    </Window.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <common:StreachableTextBlock Grid.Row="0" Margin="10" TBContent="Lý do cưỡng bức Barrier: "
                                             HorizontalAlignment="Left" 
                                             TextAlignment="Left" Height="25" 
                                             FontWeight="Bold" Foreground="{StaticResource VietPark.Brushes.WayIn}"/>
        <PasswordBox Name="Pass4Confirm" Height="20" Margin="235 0 20 0" />
        <TextBox Background="{DynamicResource TextBackground}" Height="200" Name="TextBoxReason" Grid.Row="1" FontFamily="Time New Roman" 
                         Margin="10,0,10,0">
        </TextBox>
        <TextBlock Text="Lý do không được bỏ trống (*)"  Grid.Row="2" FontFamily="Time New Roman" Margin="10" Foreground="{StaticResource VietPark.Brushes.WayOut}"></TextBlock>
        <StackPanel Grid.Row="3"  Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Grid.Column="0"
                        VerticalAlignment="Top"
                        Margin="20"
                        FontSize="13"
                        Height="30"
                        Width="100"
                        Content="Bỏ qua"
                        Click="Button_Click"
                        Style="{StaticResource MahApps.Styles.Button.Flat}" 
                        Background="{StaticResource VietPark.Brushes.WayIn}" 
                        Foreground="White"
                    />
            <Button VerticalAlignment="Top" 
                        Margin="20"
                        FontSize="13"
                        Height="30"
                        Width="100"
                        Content="Đồng ý" 
                        Click="Button_Click_1"
                        Style="{StaticResource MahApps.Styles.Button.Flat}" 
                        Background="{StaticResource VietPark.Brushes.WayIn}" 
                        Foreground="White"
                    />
        </StackPanel>
    </Grid>
</Window>
