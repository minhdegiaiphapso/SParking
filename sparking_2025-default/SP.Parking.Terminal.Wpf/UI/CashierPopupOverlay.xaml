<Window x:Class="SP.Parking.Terminal.Wpf.UI.CashierPopupOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SP.Parking.Terminal.Wpf.UI"
        xmlns:common="clr-namespace:SP.Parking.Terminal.Wpf.Views.Common"
        xmlns:w="clr-namespace:SP.Parking.Terminal.Wpf.Utility"  
        Background="{DynamicResource WindowBackground}"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d"
         WindowStyle="None"
        ShowInTaskbar="False"
         Focusable="False"
        ShowActivated="False"
        Width="600" MaxHeight="300">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBackground" 
                        Color="WhiteSmoke"
                        Opacity="0.5"/>
        <SolidColorBrush x:Key="TextBackground" 
                        Color="White"
                        Opacity="0.5"/>
    </Window.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <common:StreachableTextBlock Grid.Row="0" Grid.ColumnSpan="2" Margin="3" TBContent="Vui lòng thanh toán"
                                             HorizontalAlignment="Center" 
                                             TextAlignment="Center" Height="25" FontSize="40"
                                             FontWeight="Bold" Foreground="Green"/>
        <common:StreachableTextBlock Grid.Row="1" Margin="10" TBContent="Số tiền phải trả: "
                                             HorizontalAlignment="Right" 
                                             TextAlignment="Right" Height="25" 
                                             FontWeight="Bold" Foreground="Green"/>
        <common:StreachableTextBlock Grid.Row="1" Grid.Column="1" Margin="10" TBContent="{Binding Info.Bill}"
                                             HorizontalAlignment="Left" 
                                             TextAlignment="Left" Height="25" 
                                             FontWeight="Bold" Foreground="Green"/>
        <common:StreachableTextBlock Grid.Row="2" Margin="10" TBContent="Số tiền đã trả: "
                                             HorizontalAlignment="Right" 
                                             TextAlignment="Right" Height="25" 
                                             FontWeight="Bold" Foreground="Green"/>
        <common:StreachableTextBlock Grid.Row="2" Grid.Column="1" Margin="10" TBContent="{Binding Info.Total}"
                                             HorizontalAlignment="Left" 
                                             TextAlignment="Left" Height="25" 
                                             FontWeight="Bold" Foreground="Green"/>
        <common:StreachableTextBlock Grid.Row="3" Margin="10" TBContent="Số tờ tiền đã thu: "
                                             HorizontalAlignment="Right" 
                                             TextAlignment="Right" Height="25" 
                                             FontWeight="Bold" Foreground="Green"/>
        <common:StreachableTextBlock Grid.Row="3" Grid.Column="1" Margin="10" TBContent="{Binding Info.Amount}"
                                             HorizontalAlignment="Left" 
                                             TextAlignment="Left" Height="25" 
                                             FontWeight="Bold" Foreground="Green"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2"  Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Grid.Column="0"
                        VerticalAlignment="Top" 
                        Margin="5 5 20 5"
                        FontSize="20"  
                        Content="Cancel"
                        Click="Button_Click"
                        Style="{DynamicResource AccentedSquareButtonStyle}"/>
            <Button Grid.Column="0" x:Name="btnReset"
                        VerticalAlignment="Top" 
                        FontSize="20"
                    Margin="5"
                        Content="Reset"
                        Click="BtnReset_Click"
                        Style="{DynamicResource AccentedSquareButtonStyle}"/>
            <Button Grid.Column="0" x:Name="btnEnable"
                        VerticalAlignment="Top" 
                        FontSize="20"
                    Margin="5"
                        Content="Enable"
                        Click="BtnEnable_Click"
                        Style="{DynamicResource AccentedSquareButtonStyle}"/>
            <Button Grid.Column="0" x:Name="btnDisable"
                        VerticalAlignment="Top" 
                        FontSize="20"
                    Margin="5"
                        Content="Enable"
                        Click="BtnDisable_Click"
                        Style="{DynamicResource AccentedSquareButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
