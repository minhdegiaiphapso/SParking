<UserControl x:Class="SP.Parking.Terminal.Wpf.UI.VehicleInfoUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:SP.Parking.Terminal.Wpf.Views.Common"
             mc:Ignorable="d" x:Name="uc"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <TextBlock TextAlignment="Left" HorizontalAlignment="Stretch" Margin="5,0,0,0" VerticalAlignment="Center" FontSize="20" 
                   FontWeight="Normal" DataContext="{Binding ElementName=uc}"
                   Grid.Row="0" Grid.Column="0" Text="{Binding Path=Number}"/>
        <TextBlock TextAlignment="Left" HorizontalAlignment="Stretch" Margin="5,0,5,0" VerticalAlignment="Center" FontSize="20" 
                   FontWeight="Normal" DataContext="{Binding ElementName=uc}"
                   Grid.Row="0" Grid.Column="1" Text="{Binding Path=Brand}"/>
    </StackPanel>
</UserControl>
