<myui:CentralLaneWindow x:Class="SP.Parking.Terminal.Wpf.UI.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:myui="clr-namespace:SP.Parking.Terminal.Wpf.UI"
        xmlns:w="clr-namespace:SP.Parking.Terminal.Wpf.Utility"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"                
        WindowStyle="SingleBorderWindow"
        Width="310"
        Background="White"
        Height="160"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        BorderThickness="1"
        BorderBrush="{StaticResource VietPark.Brushes.WayIn}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0"
               Grid.ColumnSpan="2"
               Grid.Row="0"
               Name="ConfirmMessage"
               HorizontalAlignment="Center"
               HorizontalContentAlignment="Center"
               VerticalAlignment="Center"
               FontSize="18"
               FontWeight="Normal"/>
        <StackPanel Orientation="Horizontal"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="1"
                    Name="ButtonPanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
        </StackPanel>
    </Grid>
</myui:CentralLaneWindow>
