<Window x:Class="SP.Parking.Terminal.Wpf.UI.InvoicePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SP.Parking.Terminal.Wpf.UI"
        BorderBrush="{StaticResource VietPark.Brushes.WayOut}"
        BorderThickness="2"
        IsHitTestVisible="True"
        Width="500" 
        SizeToContent="Height"
        ShowInTaskbar="False"
        Focusable="False"
        ShowActivated="False"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" FontSize="18" Grid.ColumnSpan ="2"  HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource VietPark.Brushes.WayOut}">ISSUE INVOICE</TextBlock>
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="4*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Margin="3" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Right" VerticalAlignment="Center"  Foreground="{StaticResource VietPark.Brushes.WayOut}">
                Buyer code
            </TextBlock>
            <TextBox x:Name="txtCode" Grid.Row="0" Grid.Column="1" BorderBrush="{StaticResource VietPark.Brushes.WayOut}" Margin="5" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center"></TextBox>
            <TextBlock Grid.Row="1" Grid.Column="0" Margin="3" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Right" VerticalAlignment="Center"  Foreground="{StaticResource VietPark.Brushes.WayOut}">
                Buyer name
            </TextBlock>
            <TextBox x:Name="txtName" Grid.Row="1" Grid.Column="1" BorderBrush="{StaticResource VietPark.Brushes.WayOut}" Margin="5" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center"></TextBox>
            <TextBlock Grid.Row="2" Grid.Column="0" Margin="3" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Right" VerticalAlignment="Center"  Foreground="{StaticResource VietPark.Brushes.WayOut}">
                Legal name
            </TextBlock>
            <TextBox x:Name="txtLegalName" Grid.Row="2" Grid.Column="1" BorderBrush="{StaticResource VietPark.Brushes.WayOut}" Margin="5" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center"></TextBox>

            <TextBlock Grid.Row="3" Grid.Column="0" Margin="3" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Right" VerticalAlignment="Center"  Foreground="{StaticResource VietPark.Brushes.WayOut}">
                Tax code
            </TextBlock>
            <TextBox x:Name="txtTaxcode" Grid.Row="3" Grid.Column="1" BorderBrush="{StaticResource VietPark.Brushes.WayOut}" Margin="5" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center"></TextBox>
            <TextBlock Grid.Row="4" Grid.Column="0" Margin="3" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Right" VerticalAlignment="Center"  Foreground="{StaticResource VietPark.Brushes.WayOut}">
                Address
            </TextBlock>
            <TextBox x:Name="txtAddress" Grid.Row="4" Grid.Column="1" BorderBrush="{StaticResource VietPark.Brushes.WayOut}" Margin="5" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center"></TextBox>
            <TextBlock Grid.Row="5" Grid.Column="0" Margin="3" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Right" VerticalAlignment="Center"  Foreground="{StaticResource VietPark.Brushes.WayOut}">
                Phone
            </TextBlock>
            <TextBox x:Name="txtPhone" Grid.Row="5" Grid.Column="1" BorderBrush="{StaticResource VietPark.Brushes.WayOut}" Margin="5" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center"></TextBox>
            <TextBlock Grid.Row="6" Grid.Column="0" Margin="3" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Right" VerticalAlignment="Center"  Foreground="{StaticResource VietPark.Brushes.WayOut}">
                Email
            </TextBlock>
            <TextBox x:Name="txtEmail" Grid.Row="6" Grid.Column="1" BorderBrush="{StaticResource VietPark.Brushes.WayOut}" Margin="5" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center"></TextBox>
            <TextBlock Grid.Row="7" Grid.Column="0" Margin="3" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Right" VerticalAlignment="Center"  Foreground="{StaticResource VietPark.Brushes.WayOut}">
                Receiver name
            </TextBlock>
            <TextBox x:Name="txtReceiverName" Grid.Row="7" Grid.Column="1" BorderBrush="{StaticResource VietPark.Brushes.WayOut}" Margin="5" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center"></TextBox>
            <TextBlock Grid.Row="8" Grid.Column="0" Margin="3" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Right" VerticalAlignment="Center"  Foreground="{StaticResource VietPark.Brushes.WayOut}">
                Receiver Emails
            </TextBlock>
            <TextBox x:Name="txtReceiverMails" Grid.Row="8" Grid.Column="1" BorderBrush="{StaticResource VietPark.Brushes.WayOut}" Margin="5" FontSize="12"  FontFamily="tahoma" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center"></TextBox>
        </Grid>
        <Button Background="{StaticResource VietPark.Brushes.WayOut}" Margin="5" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" x:Name="btnOk" Click="btnOk_Click">Confirm (Enter)</Button>
        <Button Background="{StaticResource VietPark.Brushes.WayOut}" Margin="5" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" x:Name="btnCancel" Click="btnCancel_Click">Cancel (Esc)</Button>
    </Grid>
</Window>
