<controls:MetroWindow x:Class="SP.Parking.Terminal.Wpf.UI.AddRegisteredCard"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                      xmlns:w="clr-namespace:SP.Parking.Terminal.Wpf.Utility"
                      WindowStyle="SingleBorderWindow"
                      WindowStartupLocation="CenterOwner"
                      ShowInTaskbar="False"
                      BorderThickness="1"
                       MaxWidth="310" MaxHeight="200"
                      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <StackPanel>
        <StackPanel Margin="0,30,0,10" HorizontalAlignment="Center">
            <TextBlock Text="Thẻ không tồn tại bạn có muốn thêm dữ liệu vào khách hàng có sẵn?" TextWrapping="Wrap"></TextBlock>
            <TextBox Name="txtVehicleNumber"
                                 BorderBrush="{StaticResource MahApps.Brushes.Badged.Background}" 
                                 Height="30"
                                 controls:TextBoxHelper.Watermark="Enter vehicle number ..."
                                 materialDesign:HintAssist.Hint="Enter vehicle number ..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 KeyDown="textPassword_KeyDown" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btnOk"
                        Content="Ok"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0"
                        VerticalAlignment="Top"
                        Width="auto" Height="30"
                        Foreground="White"
                        FontWeight="Normal"
                        FontSize="12"
                        Click="btnOk_Click" />
                <Button Name="btnCancel"
                        Content="Cancel"
                        HorizontalAlignment="Center"
                        Margin="15,15,0,0"
                        VerticalAlignment="Top"
                        Width="auto" Height="30"
                        Foreground="White"
                        FontWeight="Normal"
                        FontSize="12"
                        Click="btnCancel_Click" />
            </StackPanel>
        </StackPanel>
        <TextBlock Name="textResult"
                            HorizontalAlignment ="Center"
                            Margin="5"
                            VerticalAlignment="Center" 
                            Foreground="Red"
                            FontSize="14"
                            TextWrapping="Wrap"
                            TextAlignment="Center"
                            FontWeight="Bold"/>
    </StackPanel>
</controls:MetroWindow>
